<Window x:Name="mainWindow" x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="665" Width="1085" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid x:Name="mainGrid">
        <Label x:Name="lbBombLeft" Content="Bomb(s) Left:" HorizontalAlignment="Left" Margin="10,599,0,0"
               VerticalAlignment="Top" Height="25" Width="120" FontSize="14"/>
        <Label x:Name="lbTimer" Content="Time: 0" HorizontalAlignment="Left" Margin="130,599,0,0"
               VerticalAlignment="Top" Height="25" Width="75" FontSize="14"/>
        <Menu x:Name="mainMenu" Height="25" VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem x:Name="menuFile" Header="File">
                <MenuItem x:Name="menuNewGame" Header="New Game" Click="menuNewGame_Click"/>
                <MenuItem x:Name="menuExit" Header="Exit" Click="menuExit_Click"/>
            </MenuItem>
            <MenuItem x:Name="menuHelp" Header="Help">
                <MenuItem x:Name="menuAbout" Header="About" Click="menuAbout_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
